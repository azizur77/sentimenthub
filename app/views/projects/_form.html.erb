<% form_for(project) do |f| %>
  <%= f.error_messages %>
	
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br/>

  <%= f.label :url %>
	<%= f.text_field :url %>
	<br/>

  <%= f.label :description %>
	<%= f.text_field :description %>
	<br/>

  <%= f.label :featured %>
	<%= f.check_box :featured %>
	<br/>

  <%= f.label :must_have_words %>
	<%= f.text_field :must_have_words %>
	<br/>
	
	<%= f.label :must_not_have_words %>
	<%= f.text_field :must_not_have_words %>
	<br/>

	<%= f.label :use_spam_filter %>
	<%= f.check_box :use_spam_filter %>
	<br/>
	
  <%= f.submit "Save" %>
<% end %>
